<div class="requisition">
  <h4 align="center"> Cadastro de Novo Kit </h4>
</div>

<form action="/stock/new" method="post">
  <div class="new-kit d-flex flex-column">
    <div class="d-flex flex-row justify-content-center">
      <div class="Addkit-text col-md-5">
        <select id="toxinId" class="drowdownoptions" name="kit[toxinId]" required="required">
          <option value disabled selected> Código do Produto</option>
          {{#each ToxinSiglas}}
          <option value="{{this._id}}">{{this.sigle}} Romer</option>
          {{/each}}
        </select>
      </div>
      <div class="Addkit-text col-md-5">
        <input type="number" name="kit[amount]" class="addkit-input" placeholder="Quantidade inicial de mapas:" required>
      </div>
      <div class="Addkit-text" style="width: 20px;">
      </div>
    </div>
    <div class="d-flex flex-row justify-content-center">
      <div class="Addkit-text col-5">
        <input type="text" name="kit[kitDescription]" class="addkit-input" placeholder="Descrição do Kit:"
          required>
      </div>
      <div class="Addkit-text col-1">
        <input class="addkit-input" type="text" name="kit[Lod]" placeholder="LoD:" required>
      </div>
      <div class="Addkit-text col-1">
        <input class="addkit-input" type="text" name="kit[Loq]" placeholder="LoQ:" required>
      </div>
      <div class="Addkit-text col-1">
        <h10 class="addkit-input">Expiração:</h10>
      </div>
      <div class="Addkit-text col-2">
        <input label="Validade:" style="min-width: 100px; " class="addkit-input" type="date" name="kit[expirationDate]"
          required>
      </div>
    </div>
    <div class="d-flex flex-row justify-content-center">
      <div class="Addkit-text col-5">
        <input class="addkit-input" type="text" name="kit[provider]" placeholder="Fornecedor:" required>
      </div>
      <div class="Addkit-text col-1">
        <input class="addkit-input" type="number" step=any name="kit[calibrators][1][concentration]" placeholder="P1:"
          required>
      </div>
      <div class="Addkit-text col-1">
        <input class="addkit-input" type="number" step=any name="kit[calibrators][2][concentration]" placeholder="P2:"
          required>
      </div>
      <div class="Addkit-text col-1">
        <input class="addkit-input" type="number" step=any name="kit[calibrators][3][concentration]" placeholder="P3:"
          required>
      </div>
      <div class="Addkit-text col-1">
        <input class="addkit-input" type="number" step=any name="kit[calibrators][4][concentration]" placeholder="P4:"
          required>
      </div>
      <div class="Addkit-text col-1">
        <input class="addkit-input" type="number" step=any name="kit[calibrators][5][concentration]" placeholder="P5:"
          required>
      </div>
      <div class="Addkit-text" style="width: 20px;">
      </div>
    </div>
    <div id="radio-kit" class="form-check">
      {{#each allKitTypes}}
      <div class="form-check form-check-inline">
        <input {{#compare @index 0}}checked{{/compare}} class="form-check-input" type="radio" name="kit[kitType]" value={{this}}>
        <label class="form-check-label">{{this}}</label>
      </div>
      {{/each}}
    </div>

    <div class="container-fluid">
      <div class="row">
        <div class="text-center align-center col-sm-6" id="btn-addkit">
          <a href="/stock" id="btn-new-sample-stock" class="btn btn-success">Voltar</a>
        </div>
        <div class="text-center align-center col-sm-6" id="btn-addkit">
          <button type="submit" class="btn btn-outline-success">Criar novo kit</button>
        </div>
      </div>
    </div>

</form>
<script src="/javascripts/newkit.js"></script>
<script src="/javascripts/dynamicPlaceHolder.js"></script>