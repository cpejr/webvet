    <div class="recShowBox">
      <p><font color="gray" size="5">Requisição {{requisition.requisitionNumber}}</p>
      <hr color="lightgray">
      <div class="showboxinfo">
        <p><font size="4" color="black">Data da coleta: {{requisition.collectionDate}}</p>
          <div class="table-responsive">
            <table id="tb-user" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Amostra</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                {{#each samples}}
                    <tr>
                      <th>
                        {{sample.name}}
                      </th>
                      <th>
                        <h6><span class="badge badge-pill badge-success">{{sample.status}}</span></h6>
                      </th>
                      <th>
                        <button class="fa fa-info btn"></button>
                      </th>
                    </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
      </div>
    </div>
