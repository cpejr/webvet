<h4>Requisições Disponíveis</h4>
<p></p>
<div class="table-responsive">
  <table id="tb-user" class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Status</th>
        <th>Identificação</th>
        <th>Fazenda</th>
        <th>Destino</th>
        <th>Editar</th>
      </tr>
    </thead>
    <tbody>
      {{#each requisitions}}
        <tr>
          <th>{{status}}</th>
          <th>{{requisitionnumber}}/{{year}}</th>
          <th>{{producer}}</th>
          <th>{{destination}}</th>
          <th>
            <button onClick="location.href='requisition/edit/{{_id}}'" class="fa fa-info btn m-1"></button>
          </th>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>