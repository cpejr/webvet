<form action="/finalization/absorbances" method="post">

  <div class="col-sm-fluid container-fluid">
    <h4>Amostras</h4>
  </div>

  <div class="container-fluid d-flex justify-content-around">
    {{#each result}}
      <table>
        <thead>
          <tr>
            <th class="" scope="col">{{name}}</th>
            <th class="absorbance px-2" scope="col">Absorv√¢ncia</th>
          </tr>
        </thead>

        <tbody>
          {{#each samples}}
            <tr>
              <th>{{sampleNumber}}</th>
              <td class="d-flex input-group-sm px-2" style="max-width: 200px;">
                  <input type="number" name="kits[{{../_id}}][{{analysis.workmapId}}][{{_id}}][{{analysis._id}}][absorbance1]" class="form-control text-center" step=".0001">
                  <input type="number" name="kits[{{../_id}}][{{analysis.workmapId}}][{{_id}}][{{analysis._id}}][absorbance2]" class="form-control text-center" step=".0001">
              </td>
            </tr>
            {{#if changedworkmap}}
              <tr>
                <td><br></td>
              </tr>
            {{/if}}
          {{/each}}
        </tbody>
      </table>
    {{/each}}
  </div>

  <div class="btn-group-justified col-sm-12 container-fluid">
    <div class="btn btn-back">
      <a href="/queue" class="btn btn-success" id="test">Voltar</a>
    </div>
    <div class="btn btn-abs">
      <button class="btn btn-success">Finalizar e ver resultados</button>
    </div>
  </div>
  
</form>