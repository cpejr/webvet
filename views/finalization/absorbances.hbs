<form action="/finalization/absorbances" method="post">

  <div class="col-sm-fluid container-fluid">
    <h4>Amostras</h4>
  </div>

  <div class="container-fluid d-flex justify-content-around">
    {{#each result}}
      <table>
        <thead>
          <tr>
            <th class="" scope="col">{{name}}</th>
            <th class="absorbance px-2" scope="col">Absorv√¢ncia</th>
          </tr>
        </thead>

        <tbody>
          {{#each samples}}
            {{#if changedworkmap}}
              <tr>
                <td><br></td>
              </tr>
            {{/if}}
            <tr>
              <th>{{samplenumber}}</th>
              <td class="d-flex input-group-sm px-2" style="max-width: 200px;">
                <div class="some">
                  <input name="toxinas[{{../name}}][{{@index}}][_id]" type="text" value="{{_id}}">
                </div>
                  <input type="text" name="toxinas[{{../name}}][{{@index}}][absorbance]" class="form-control text-center">
                  <input type="text" name="toxinas[{{../name}}][{{@index}}][absorbance2]" class="form-control text-center">
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/each}}
  </div>

  <div class="btn-group-justified col-sm-12 container-fluid">
    <div class="btn btn-back">
      <a href="/queue" class="btn btn-success" id="test">Voltar</a>
    </div>
    <div class="btn btn-abs">
      <button class="btn btn-success">Finalizar</button>
    </div>
  </div>
  
</form>