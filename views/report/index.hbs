<h4>Requisições</h4>
<div class="text-right">
  <form action="/requisition/new" method="get">
      <button type="submit" id="btn-new-requisition" class="btn btn-primary btn-sm">Nova Requisição</button>
  </form>
</div>
<p></p>
<div class="table-responsive">
  <table id="tb-user" class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Identificação</th>
        <th>Fazenda</th>
        <th>Destino</th>
        <th>Detalhes</th>
        <th>Amostras</th>
      </tr>
    </thead>
    <tbody>
      {{#each logados}}
          <tr>
            <th>{{requisitionNumber}}</th>
            <th>{{producer}}</th>
            <th>{{destination}}</th>
            <th>
              <button onClick="location.href='requisition/edit/{{_id}}'" class="fa fa-info btn m-1"></button>
            </th>
            <th>
              {{#each samples}}
              <button onClick="location.href='report/samples/{{this}}'" class="btn">Amostra</button>
              {{/each}}
            </th>
          </tr>
      {{/each}}
    </tbody>
  </table>
</div>
