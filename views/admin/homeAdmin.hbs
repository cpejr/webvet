<div id="kits" class="dashboard-item">
  <div class="dashboard-header">
    <h5 class="pt-2"> Notificações </h5>
  </div>
</div>

{{#each totalKitCounter}}
  {{#if isLessThan}}
    <div class="alertaa">
      <div class="alert  alert-danger alert-dismissible fade show" role="alert{{name}}">
        Estoque: Os kits do tipo <strong>{{name}}</strong>
        tem o valor de estoque mínimo igual <strong>{{minStock}}</strong> e a quantidade atual
        somada de workmaps do tipo <strong>{{name}}</strong> é <strong>{{count}}</strong>.
        <button type="button" class="close" data-dismiss="alert{{name}}" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <button type="button" onclick="location.href='/stock'"
        class="btn btn-outline-danger btn-sm">Ver Estoque</button>
      </div>
    </div>
  {{/if}}
{{/each}}

{{#if gt0}}
  {{#if et1}}
    <div class="alertaa">
      <a href="/requisition">
        <div class="alert  alert-danger alert-dismissible fade show" role="alert">
          Requisição: Existe uma nova requisição aguardando avaliação!
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </a>
    </div>
  {{/if}}

  {{#if gt1}}
    <div class="alertaa">
      <a href="/requisition">
        <div class="alert  alert-danger alert-dismissible fade show" role="alert">
          Requisição: Existem {{novasReq}} novas requisições aguardando avaliação!
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </a>
    </div>
  {{/if}}
{{/if}}

{{#each vencidos}}
  <div class="alertaa">
    <div class="alert  alert-danger alert-dismissible fade show" onclick="location.href='/stock/edit/{{_id}}'"
      role="alert">
      Vencimento: O kit <strong>{{productCode}} ({{kitType}})</strong> venceu em
      <strong>{{expiration}}</strong> .
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <button type="button" onclick="location.href='/stock/edit/{{_id}}'"
        class="btn btn-outline-danger btn-sm">Ver Kit</button>
    </div>
  </div>
{{/each}}

<div class="dashboard-container">
  <div id="samples" class="dashboard-counter">
    <div class="dashboard-number">{{countSamples}}</div>
    <div class="dashboard-label">Amostras</div>
  </div>

  <div id="analysis" class="dashboard-counter">
    <div class="dashboard-number">{{countRequisitions}}</div>
    <div class="dashboard-label">Requisições</div>
  </div>

  <div id="clients" class="dashboard-counter">
    <div class="dashboard-number">{{countClients}}</div>
    <div class="dashboard-label">Clientes</div>
  </div>

</div>