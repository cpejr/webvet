{
  "name": "smart-management",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "nodemon ./bin/www"
  },
  "engines": {
    "node": "10.15.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^7.0.0",
    "express": "~4.16.0",
    "express-flash": "0.0.2",
    "express-handlebars": "^3.0.2",
    "express-session": "^1.16.1",
    "firebase": "^7.7.0",
    "firebase-admin": "^8.10.0",
    "font-awesome": "^4.7.0",
    "gulp-sass": "^4.0.2",
    "hbs": "^4.1.0",
    "http-errors": "~1.6.2",
    "jquery": "^3.5.0",
    "method-override": "^3.0.0",
    "mongoose": "^5.4.19",
    "morgan": "~1.9.0",
    "node-sass-middleware": "0.11.0",
    "nodemailer": "^5.1.1",
    "regression": "^2.0.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "node-sass": "^4.13.1"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "newline-per-chained-call": [
        "off"
      ],
      "max-len": [
        "error",
        {
          "code": 200
        }
      ],
      "no-console": [
        "off"
      ],
      "prefer-arrow-callback": [
        "warn"
      ],
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "linebreak-style": [
        "off"
      ],
      "no-loop-func": [
        "off"
      ],
      "no-underscore-dangle": [
        "off"
      ]
    }
  }
}
